{% extends 'base.html.twig' %}

{% block title %}Address Upload{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if message != '' %}
<div class="example-wrapper message-wrapper">
    {{message}}
</div>
{% endif %}

{% if stat %}
<div class="example-wrapper stat-wrapper">
    {{stat.total}} - Всего
    {{stat.add}} - Добавлено
</div>
{% endif %}

<div class="example-wrapper">
    {{form(form)}}
</div>

{% endblock %}
